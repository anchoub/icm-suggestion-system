# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name

# Authentication Method (choose one)
# Set USE_ENTRA_AUTH=true for Azure AD / Entra ID authentication
# Set USE_ENTRA_AUTH=false for SQL authentication
USE_ENTRA_AUTH=false

# SQL Authentication (required if USE_ENTRA_AUTH=false)
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# SQL Driver (usually default is fine)
SQL_DRIVER=ODBC Driver 18 for SQL Server

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Logging
LOG_LEVEL=INFO
